@using Class50_SimchaFund.Web.Models;
@using Class50_SimchaFund.Data;
@model ContributorsHistoryViewModel;

<div class="container">
    <main role="main" class="pb-3" style="margin-top: 60px;">

        <div class="header">
            <h1>History for @Model.Contributor.FirstName @Model.Contributor.LastName</h1>
            <h3>Current Balance: @Model.Contributor.Balance.ToString("C")</h3>
        </div>

        <div class="row header">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Action</th>
                        <th>Date</th>
                        <th>Amount</th>
                    </tr>
                    @foreach (Transaction transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@transaction.Action</td>
                            <td style="text-align: center; vertical-align: middle;">
                                @transaction.Date.ToLongDateString()
                            </td>
                            <td style="text-align: center; vertical-align: middle;">
                               @transaction.Amount.ToString("C")
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div style="text-align:center;">
            <a class="btn-lg btn-danger" href="/contributors">Back to Contributors</a>
        </div>
    </main>
</div>
